<Window x:Class="WPFtest.Window3"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFtest"
        mc:Ignorable="d"
        Loaded="WindowLoad"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Title="Настройки" Height="450" Width="450" Icon="Resources\option1s.png">
    <Window.Resources>
        <Style x:Key="ButtonStyle2" TargetType="{x:Type Button}">
            <Setter Property="FocusVisualStyle" Value="{StaticResource FocusVisual}"/>
            <Setter Property="Background" Value="{StaticResource Button.Static.Background}"/>
            <Setter Property="BorderBrush" Value="{StaticResource Button.Static.Border}"/>
            <Setter Property="Foreground" Value="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Padding" Value="1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border x:Name="border" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" Background="{TemplateBinding Background}" SnapsToDevicePixels="true">
                            <ContentPresenter x:Name="contentPresenter" Focusable="False" HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" Margin="{TemplateBinding Padding}" RecognizesAccessKey="True" SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsDefaulted" Value="true"/>
                            <Trigger Property="IsPressed" Value="true"/>
                            <Trigger Property="IsEnabled" Value="false"/>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Grid Style="{DynamicResource GridTheme}">
        <Grid Name="SettingsGrid" HorizontalAlignment="Left" Height="421" VerticalAlignment="Top" Width="444">
            <GroupBox Style="{DynamicResource GroupBoxStyle}" Header="Тема" Margin="10,10,218,315.885" FontSize="16" FontWeight="Bold" FontFamily="Segoe UI Symbol" BorderBrush="Black">
                <Grid HorizontalAlignment="Left" Height="66.168" Margin="-6,0,-2,0" VerticalAlignment="Top" Width="212">

                    <RadioButton Style="{DynamicResource RadioButtonStyle}" Name="radiodark" Content="Темная" HorizontalAlignment="Left" Height="22" Margin="10,41.053,0,0" VerticalAlignment="Top" Width="151.96" FontSize="12" FontWeight="Bold"/>
                    <RadioButton Style="{DynamicResource RadioButtonStyle}" Name="radiolight" Content="Светлая" HorizontalAlignment="Left" Height="24.667" Margin="10,11.386,0,0" VerticalAlignment="Top" Width="151.96" FontSize="12" FontWeight="Bold"/>
                </Grid>
            </GroupBox>
            <Button Style="{DynamicResource ButtonStyle}" Content="Принять" Click="Apply" HorizontalAlignment="Left" Height="31.333" Margin="351.667,360,0,0" VerticalAlignment="Top" Width="71" FontSize="14" FontFamily="Segoe UI Symbol" FontWeight="Bold"/>
            <Button Style="{DynamicResource ButtonStyle}" Content="Отмена" Click="Cancel" HorizontalAlignment="Left" Height="31.333" Margin="262.667,360,0,0" VerticalAlignment="Top" Width="71" FontSize="14" FontFamily="Segoe UI Symbol" FontWeight="Bold"/>
            <GroupBox Style="{DynamicResource GroupBoxStyle}" Header="Параметры поиска" HorizontalAlignment="Left" Height="227" Margin="10,111,0,0" VerticalAlignment="Top" Width="216" FontSize="16" FontWeight="Bold" FontFamily="Segoe UI Symbol" BorderBrush="Black">
                <Grid HorizontalAlignment="Left" Height="203" Margin="-5,0,-2,-4.28" VerticalAlignment="Top" Width="211">
                    <TextBlock Style="{DynamicResource TextBlockStyle}" HorizontalAlignment="Left" Height="26" Margin="10,10,0,0" TextWrapping="Wrap" Text="Максимальный возраст" VerticalAlignment="Top" Width="172.951" FontSize="12" FontWeight="Bold"/>
                    <TextBlock Style="{DynamicResource TextBlockStyle}" HorizontalAlignment="Left" Height="26" Margin="10,90,0,0" TextWrapping="Wrap" Text="Минимальный возраст" VerticalAlignment="Top" Width="172.951" FontSize="12" FontWeight="Bold"/>
                    <Slider  Name="slidermin"  TickFrequency="1" TickPlacement="BottomRight" Minimum ="18.00" Maximum="99.00" HorizontalAlignment="Left" ValueChanged="val" Height="29" Margin="7,116,0,0" VerticalAlignment="Top" Width="190.667"/>
                    <Slider  Name="slidermax"  TickFrequency="1" TickPlacement="BottomRight" Minimum ="18.00" Maximum="99.00" HorizontalAlignment="Left" ValueChanged="val" Height="29" Margin="10,36,0,0" VerticalAlignment="Top" Width="190.667"/>
                    <Border Style="{DynamicResource BorderStyle}"  BorderThickness="1" HorizontalAlignment="Left" Height="20" Margin="165.667,10,0,0" VerticalAlignment="Top" Width="25">
                        <TextBlock Style="{DynamicResource TextBlockStyle}" x:Name="valtxtmax" HorizontalAlignment="Left" Height="21" Margin="-1,1,-1,-4" TextWrapping="Wrap" VerticalAlignment="Top" Width="25" TextAlignment="Center" FontSize="12" FontWeight="Normal"/>
                    </Border>
                    <Border Style="{DynamicResource BorderStyle}" BorderThickness="1" HorizontalAlignment="Left" Height="20" Margin="165.667,90,0,0" VerticalAlignment="Top" Width="25">
                        <TextBlock Style="{DynamicResource TextBlockStyle}" x:Name="valtxtmin" HorizontalAlignment="Left" Height="21" Margin="-1,1,-1,-4" TextWrapping="Wrap" VerticalAlignment="Top" Width="25" TextAlignment="Center" FontSize="12" FontWeight="Normal"/>
                    </Border>
                    <RadioButton Style="{DynamicResource RadioButtonStyle}" Name="genderfindmale" Content="Мужской" HorizontalAlignment="Left" Height="24" Margin="7,149,0,0" VerticalAlignment="Top" Width="130" FontSize="14" FontWeight="Bold"/>
                    <RadioButton Style="{DynamicResource RadioButtonStyle}"  Name="genderfindfemale" Content="Женский" HorizontalAlignment="Left" Height="23" Margin="7,173,0,0" VerticalAlignment="Top" Width="130" FontSize="14" FontWeight="Bold"/>
                </Grid>
            </GroupBox>
            <Button Name="help" MouseEnter="HelpEnter" Click="Help" MouseLeave="HelpLeave" RenderOptions.BitmapScalingMode="HighQuality" HorizontalAlignment="Left" Height="35" Margin="387.667,16.667,0,0" VerticalAlignment="Top" Width="35" BorderBrush="{x:Null}" Foreground="{x:Null}" Style="{DynamicResource ButtonStyle2}" RenderTransformOrigin="0.521,0.507">
                <Button.Background>
                    <ImageBrush x:Name="img" ImageSource="Resources\help.png" Stretch="Uniform"/>
                </Button.Background>
            </Button>


        </Grid>
        <Grid Name="HelpGrid" Visibility="Collapsed" HorizontalAlignment="Left" Height="421" VerticalAlignment="Top" Width="444">
            <ToggleButton Style="{DynamicResource ToggleButtonStyle}" Name="TgButton1" ToggleButton.Checked="Help1M" Content="О приложении" HorizontalAlignment="Left" Margin="16.333,16.666,0,0" VerticalAlignment="Top" Height="41.96" Width="111.753" FontFamily="Segoe UI Symbol" FontWeight="Bold"/>
            <Grid Name="Help1" HorizontalAlignment="Left" Height="394.334" Margin="133.086,16.666,0,0" VerticalAlignment="Top" Width="300.914">
                <TextBlock Style="{DynamicResource TextBlockStyle}" HorizontalAlignment="Left" Height="374.334" TextWrapping="Wrap" VerticalAlignment="Top" Width="280.914" Margin="10,10,0,0" FontFamily="Segoe UI Symbol" FontSize="14"><Run Text="Приложение &quot;Одногруппники&quot; было разработано исключительно в развлекательных целях. "/><Run Text="С помощью этого приложения можно завести новые знакомства."/><Run Text=" "/></TextBlock>
            </Grid>
            <ToggleButton Style="{DynamicResource ToggleButtonStyle}" Name="TgButton2" ToggleButton.Checked="Help2M" HorizontalAlignment="Left" Margin="16.333,79.333,0,0" VerticalAlignment="Top" Height="41.96" Width="111.753" FontFamily="Segoe UI Symbol" FontWeight="Bold">
                <TextBlock TextAlignment="Center"> Редактирование <LineBreak/> профиля</TextBlock>
            </ToggleButton>
            <ToggleButton Style="{DynamicResource ToggleButtonStyle}" Name="TgButton3" ToggleButton.Checked="Help3M" HorizontalAlignment="Left" Margin="16.333,140.666,0,0" VerticalAlignment="Top" Height="41.96" Width="111.753" FontFamily="Segoe UI Symbol" FontWeight="Bold">
                <TextBlock TextAlignment="Center"><Run Text="Настройки"/><LineBreak/><Run Text="приложения"/></TextBlock>
            </ToggleButton>
            <ToggleButton Style="{DynamicResource ToggleButtonStyle}" Name="TgButton4" ToggleButton.Checked="Help4M" HorizontalAlignment="Left" Margin="16.333,201.333,0,0" VerticalAlignment="Top" Height="41.96" Width="111.753" FontFamily="Segoe UI Symbol" FontWeight="Bold">
                <TextBlock TextAlignment="Center"><Run Text="Поиск"/><LineBreak/><Run Text="пары"/></TextBlock>
            </ToggleButton>
            <Grid Name="Help2" Visibility="Collapsed" HorizontalAlignment="Left" Height="377.668" VerticalAlignment="Top" Width="300.914" Margin="133.086,16.666,0,0">
                <TextBlock Style="{DynamicResource TextBlockStyle}" HorizontalAlignment="Left" Height="374.334" TextWrapping="Wrap" VerticalAlignment="Top" Width="280.914" Margin="10,10,0,-6.666" FontFamily="Segoe UI Symbol" FontSize="14"><Run Text="Для редактирования профиля нужно нажать на кнопку "/><Run Text="&quot;"/><Run Text="Редактирование профиля"/><Run Text="&quot;"/><Run Text=" и выбрать необходимый пункт."/><LineBreak/><Run Text=""/><LineBreak/><Run Text="При редактировании имени разрешается использование латиницы и кириллицы. "/><LineBreak/><Run Text=""/><LineBreak/><Run Text="Пароль должет быть не короче 5 символов и не длиннее 24 символов."/><LineBreak/><Run/><LineBreak/><Run Text="Для загрузки фотографии необходимо выбрать соответсвующий файл на компьютере."/><LineBreak/><Run/><LineBreak/><Run Text="Информация о себе должна быть не длиннее 350 символов."/><LineBreak/><Run/><LineBreak/><Run/><LineBreak/><Run/><LineBreak/><Run/></TextBlock>
            </Grid>
            <Grid Name="Help3" Visibility="Collapsed" HorizontalAlignment="Left" Height="377.668" VerticalAlignment="Top" Width="300.914" Margin="133.086,16.666,0,0">
                <TextBlock Style="{DynamicResource TextBlockStyle}" HorizontalAlignment="Left" Height="374.334" TextWrapping="Wrap" VerticalAlignment="Top" Width="280.914" Margin="10,10,0,-6.666" FontFamily="Segoe UI Symbol" FontSize="14" Text="В настройках вы можете выбрать цвет темы, максимальный и минимальный возраст, а также пол для поиска пары."/>
            </Grid>
            <Grid Name="Help4" Visibility="Collapsed" HorizontalAlignment="Left" Height="377.668" VerticalAlignment="Top" Width="300.914" Margin="133.086,16.666,0,0">
                <TextBlock Style="{DynamicResource TextBlockStyle}" HorizontalAlignment="Left" Height="374.334" TextWrapping="Wrap" VerticalAlignment="Top" Width="280.914" Margin="10,10,0,-6.666" FontFamily="Segoe UI Symbol" FontSize="14"><Run Text="Для поиска пары необходимо задать желательные параметры поиска пары в настройках приложения. Как только пара найдется вы можете либо поставить "/><Run Text="&quot;"/><Run Text="лайк"/><Run Text="&quot;"/><Run Text=" либо "/><Run Text="&quot;"/><Run Text="дизлайк"/><Run Text="&quot;"/><Run Text=". Если вы нажмёте "/><Run Text="&quot;"/><Run Text="дизлайк"/><Run Text="&quot;"/><Run Text=", то этот профиль больше никогда не будет вам показан. В случае если симпатия будет взаимна будет образована пара и вы сможете обмениваться друг с другом сообщениями. Чтобы удалить пару нужно нажать "/><Run Text="&quot;"/><Run Text="три точки"/><Run Text="&quot;"/><Run Text=" на соответствующем сообщении, "/><Run Text="потом нажать кнопку "/><Run Text="&quot;"/><Run Text="удалить пару"/><Run Text="&quot;"/><Run Text="."/></TextBlock>
            </Grid>
            <Button Style="{DynamicResource ButtonStyle}" Click="BackToSettings" Content="Назад" HorizontalAlignment="Left" Height="34.666" Margin="16.333,372.031,0,0" VerticalAlignment="Top" Width="111.753" FontFamily="Segoe UI Symbol" FontWeight="Bold"/>
        </Grid>

    </Grid>
</Window>
