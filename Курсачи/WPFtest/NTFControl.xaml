<UserControl x:Class="WPFtest.NTFControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPFtest"
             Name="NTFC"
             mc:Ignorable="d" Height="Auto" Width="480" Margin="0,2,0,0">
    <Grid Background="#FFA8A8A8" Height="Auto" >
        <Grid HorizontalAlignment="Left" Height="Auto" Margin="5.012,38.882,0,8.5" Width="464.988" Background="#FF9E9E9E">
            <TextBlock HorizontalAlignment="Left" Text="{Binding Notify, ElementName=NTFC}" Height="Auto" TextWrapping="Wrap" VerticalAlignment="Top" Width="464.988" FontSize="15"/>
        </Grid>
        <TextBlock HorizontalAlignment="Left" Text="{Binding Date, ElementName=NTFC}" Height="19.382" Margin="5.012,14.5,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="147.311" FontSize="14" FontFamily="Segoe UI Symbol"/>

    </Grid>
</UserControl>
